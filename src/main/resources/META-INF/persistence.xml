<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="webapp-demo-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entities -->
        <class>com.reingenierie.model.Product</class>
        
        <properties>
            <!-- Configuration JDBC définie uniquement via code Java (HibernateUtil) -->
            <!-- NE PAS définir jdbc.driver, jdbc.url, jdbc.user, jdbc.password ici -->
            <!-- pour permettre la surcharge par variables d'environnement -->
            
            <!-- Connection Pool également défini via code Java (HibernateUtil) -->
            <!-- pour permettre la configuration dynamique selon l'environnement -->
            
            <!-- Hibernate Configuration -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
